<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    {{#myDecks}}
    <h4>{{name}}</h4>
      {{#card}}
      <p>{{question}}</p>
      <p>{{answer}}</p>
      <form class="" action="/user/decks/editCard/{{_id}}" method="get">
        <button type="submit" name="button">Edit Card</button>
      </form>
      <form class="" action="/user/decks/deleteCard/{{_id}}" method="post">
        <button type="submit" name="button">Delete Card</button>
      </form>
      {{/card}}
    <form class="" action="/user/decks/{{_id}}/addcard" method="post">
        <input type="text" name="details" value="" placeholder="Question">
        <input type="text" name="answer" value="" placeholder="answer">
        <button type="submit" name="button">Add Card</button>
    </form>
    {{/myDecks}}


  </body>
</html>
